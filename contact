    <title>Contact Us</title>
    <!-- Use Inter font for a modern look -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap">
    <!-- Load Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Load Font Awesome for the email icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #ffffff; /* The body background is now white */
            padding: 2rem;
        }
    </style>
</head>
<body class="bg-white text-gray-800">

    <!-- The form container is now a regular block on the page, with no box or shadow -->
    <div class="mx-auto w-full max-w-lg py-8 sm:py-10 md:py-12">
        <!-- Form Header -->
        <div class="mb-6 text-center">
            <h2 class="text-3xl sm:text-4xl font-bold text-gray-900">Contact Us</h2>
        </div>

        <!-- The main form -->
        <form id="contact-form" class="space-y-5">
            <!-- Name -->
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Your Name</label>
                <input type="text" id="name" name="name" required
                       class="mt-1 block w-full rounded-lg border border-gray-400 shadow-sm p-3 focus:border-blue-600 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
            </div>

            <!-- Phone -->
            <div>
                <label for="phone" class="block text-sm font-medium text-gray-700">Phone Number</label>
                <input type="tel" id="phone" name="phone"
                       class="mt-1 block w-full rounded-lg border border-gray-400 shadow-sm p-3 focus:border-blue-600 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
            </div>

            <!-- Region -->
            <div>
                <label for="region" class="block text-sm font-medium text-gray-700">Region</label>
                <input type="text" id="region" name="region"
                       class="mt-1 block w-full rounded-lg border border-gray-400 shadow-sm p-3 focus:border-blue-600 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
            </div>

            <!-- Email -->
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
                <input type="email" id="email" name="email" required
                       class="mt-1 block w-full rounded-lg border border-gray-400 shadow-sm p-3 focus:border-blue-600 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
            </div>

            <!-- Tool and Type of Message -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
                <div>
                    <label for="tool" class="block text-sm font-medium text-gray-700">Tool with Issue</label>
                    <input type="text" id="tool" name="tool"
                           class="mt-1 block w-full rounded-lg border border-gray-400 shadow-sm p-3 focus:border-blue-600 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
                </div>
                <div>
                    <label for="type" class="block text-sm font-medium text-gray-700">Message Type</label>
                    <select id="type" name="type" required
                            class="mt-1 block w-full rounded-lg border border-gray-400 shadow-sm p-3 focus:border-blue-600 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
                        <option value="Report">Report</option>
                        <option value="Suggestion">Suggestion</option>
                        <option value="Query">Query</option>
                    </select>
                </div>
            </div>

            <!-- Main Message -->
            <div>
                <label for="message" class="block text-sm font-medium text-gray-700">Main Message</label>
                <textarea id="message" name="message" rows="5" required
                          class="mt-1 block w-full rounded-lg border border-gray-400 shadow-sm p-3 focus:border-blue-600 focus:ring focus:ring-blue-200 focus:ring-opacity-50"></textarea>
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md
                           hover:bg-blue-700 transition-colors duration-200 flex items-center justify-center space-x-2">
                <i class="fas fa-envelope"></i>
                <span>Contact Us</span>
            </button>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const contactForm = document.getElementById('contact-form');

            // The form now directly handles the mailto link upon submission
            contactForm.addEventListener('submit', (e) => {
                e.preventDefault(); // Prevent the default form submission

                // Create a FormData object from the form to easily get all the values
                const formData = new FormData(contactForm);
                const data = Object.fromEntries(formData.entries());

                // Construct the email subject and body
                const subject = `Contact Form Submission: ${data.type}`;
                const body = `
Message Type: ${data.type}
Tool with Issue: ${data.tool}
Name: ${data.name}
Email: ${data.email}
Phone: ${data.phone}
Region: ${data.region}

--------------------------
Message:
${data.message}
                `.trim();

                // Create the mailto URL with the subject and body
                const mailtoUrl = `mailto:ebma@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;

                // Open the user's default email client
                window.location.href = mailtoUrl;

                // Clear the form fields after submission
                contactForm.reset();
            });
        });
    </script>

</body>
</html>
