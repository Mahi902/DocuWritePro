    const tools = [
        { id: 'free-edit', label: 'Free Edit', icon: 'crop_free' },
        { id: 'rotate', label: 'Rotate 90Â°', icon: 'rotate_right' },
        { id: 'flip-v', label: 'Flip Vertical', icon: 'flip' },
        { id: 'flip-h', label: 'Flip Horizontal', icon: 'swap_horiz' }, // Icon fixed
        { id: 'portions', label: 'Portions', icon: 'aspect_ratio' },
    ];
    return `<h3 class="font-bold text-lg mb-4">Crop & Rotate</h3>
            <div class="flex flex-col gap-2">
            ${tools.map(tool => `
                <button data-subtool="${tool.id}" class="subtool-btn w-full text-left flex items-center gap-3 p-2 rounded-lg hover:bg-gray-100">
                    <span class="material-symbols-outlined text-gray-600">${tool.icon}</span>
                    <span class="font-medium">${tool.label}</span>
                </button>`).join('')}
            </div>`;
}
function getCropPortionsHTML() { 
     return `<div class="w-full flex items-center justify-center gap-6">
