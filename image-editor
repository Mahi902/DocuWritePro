                    <label for="corner-slider" class="font-medium text-sm">Corners:</label>
                    <input type="range" id="corner-slider" min="0" max="50" value="${state.crop.borderRadius}" class="w-32">
                </div>
                <div class="flex items-center gap-2">
                    <label class="font-medium text-sm">Ratio:</label>
                    <input type="number" id="ratio-w" class="w-16 border rounded p-1 text-center" placeholder="W">
                    <span class="text-gray-400">:</span>
