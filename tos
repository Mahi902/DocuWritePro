  <script>
    // Disable text selection on all devices
    ['-webkit-user-select','-moz-user-select','-ms-user-select','user-select'].forEach(p=>document.documentElement.style.setProperty(p,'none','important'));

    // PDF Download Function
    document.getElementById("download-btn").addEventListener("click", function(){
      // 1. Create a container for the PDF content that will be generated
      const pdfElement = document.createElement('div');

      // 2. Gather content from the visible page to populate the PDF
      const lastUpdated = document.querySelector('#tos-content .muted.small').innerText;
      
      // Grab all sections. Each section starts with an H2 and includes the following paragraphs.
      const sections = Array.from(document.querySelectorAll('#tos-content > h2')).map(h2 => {
          let content = '';
          let sibling = h2.nextElementSibling;
          // Loop through siblings until we hit the next H2 or run out of elements
          while (sibling && sibling.tagName !== 'H2') {
              if (sibling.tagName === 'P') {
                  content += sibling.outerHTML;
              }
              sibling = sibling.nextElementSibling;
          }
          return `
              <div class="section">
                  <h2>${h2.innerHTML}</h2>
                  ${content}
              </div>
          `;
      }).join('');

      // 3. Define the complete HTML and CSS for the certificate-style PDF.
      // This content is self-contained and ensures the PDF looks correct regardless of website styles.
      pdfElement.innerHTML = `
        <style>
          /* Import fonts for a professional look */
          @import url('https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&family=Roboto:wght@400;500&display=swap');
          
          .pdf-container {
            /* --- Base styles to fix the white text on white background issue --- */
            color: #111 !important; 
            background-color: #fff !important; 
            /* --- Certificate styling --- */
            font-family: 'Merriweather', serif;
            padding: 1in 1in; /* Standard document margins */
            border: 10px double #002d5b; /* Formal double border */
            box-sizing: border-box;
            width: 8.5in; /* Standard Letter size */
            min-height: 11in;
          }
          .pdf-header {
            text-align: center;
            border-bottom: 2px solid #1a73e8;
            padding-bottom: 20px;
            margin-bottom: 30px;
          }
          .pdf-logo {
            display: inline-block;
            width: 60px; height: 60px; line-height: 60px;
            border-radius: 12px;
            background: linear-gradient(135deg, #1a73e8, #3aa0ff);
            color: white; font-weight: 700; font-size: 24px;
            font-family: 'Roboto', sans-serif;
            margin-bottom: 10px;
          }
          .pdf-title {
            font-size: 28px; font-weight: 700; color: #002d5b; margin: 0;
            font-family: 'Roboto', sans-serif;
          }
          .pdf-subtitle {
            font-size: 14px; color: #555; margin-top: 5px;
          }
          .section {
            margin-bottom: 24px;
            page-break-inside: avoid; /* Try to keep sections from splitting across pages */
          }
          .section h2 {
            font-family: 'Roboto', sans-serif;
            font-size: 16px; font-weight: 500; color: #1a73e8;
            border-bottom: 1px solid #e0e0e0;
            padding-bottom: 8px; margin-top: 0; margin-bottom: 12px;
          }
          .section p {
            font-size: 12px; line-height: 1.6; color: #333 !important;
            margin: 0 0 12px 0;
          }
          .pdf-footer {
            text-align: center; margin-top: 40px; padding-top: 20px;
            border-top: 1px solid #ccc;
            font-size: 10px; color: #777;
            font-family: 'Roboto', sans-serif;
          }
        </style>
        <div class="pdf-container">
            <header class="pdf-header">
                <div class="pdf-logo">TOS</div>
                <h1 class="pdf-title">Certificate of Terms of Service</h1>
                <p class="pdf-subtitle"><strong>DocuWrite Pro</strong> | ${lastUpdated}</p>
            </header>
            <main class="pdf-body">
                ${sections}
            </main>
            <footer class="pdf-footer">
                This document is a formal record of the DocuWrite Pro Terms of Service.
                <br>
                &copy; ${new Date().getFullYear()} DocuWrite Pro. All Rights Reserved.
            </footer>
        </div>
      `;

      // 4. Temporarily append the new element to the body (off-screen) so html2pdf can render it
      pdfElement.style.position = 'absolute';
      pdfElement.style.left = '-9999px';
      document.body.appendChild(pdfElement);
      
      // 5. Configure and run html2pdf on the newly created element
      const opt = {
        margin:       0,
        filename:     'DocuWrite_Pro_TOS_Certificate.pdf',
        image:        { type: 'jpeg', quality: 0.98 },
        html2canvas:  { scale: 2, useCORS: true },
        jsPDF:        { unit: 'in', format: 'letter', orientation: 'portrait' }
      };
      
      const elementToRender = pdfElement.querySelector('.pdf-container');
      
      html2pdf().from(elementToRender).set(opt).save().then(() => {
        // 6. Clean up by removing the temporary element after the PDF has been saved
        document.body.removeChild(pdfElement);
      }).catch(err => {
        console.error("PDF generation failed:", err);
        document.body.removeChild(pdfElement); // Also remove on error
      });
    });
  </script>
</body>
